<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/showInterstitialAd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Show Interstitial AD" />
    <Button
        android:id="@+id/showInlineAd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Show Inline AD"
        android:layout_marginTop="20dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showInterstitialAd" />
    <Button
        android:id="@+id/showTopBannerAd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Show Screen Top AD"
        android:layout_marginTop="20dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showInlineAd"/>
    <Button
        android:id="@+id/showBottomBannerAd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Show Screen Bottom AD"
        android:layout_marginTop="20dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showTopBannerAd"/>
    <Button
        android:id="@+id/showFloatingAd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Show Floating AD"
        android:layout_marginTop="20dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showBottomBannerAd"/>

    <Button
        android:id="@+id/videoPausePictureAd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Video Pause Picture AD"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showFloatingAd" />

</androidx.constraintlayout.widget.ConstraintLayout>
